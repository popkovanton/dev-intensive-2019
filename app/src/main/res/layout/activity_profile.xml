<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileActivity">

    <ImageView
        android:id="@+id/iv_header_background"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_bg" />

    <ru.skillbranch.devintensive.ui.custom.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/avatar_round_size"
        android:layout_height="@dimen/avatar_round_size"
        android:layout_marginTop="36dp"
        app:cv_borderWidth="2dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_header_background"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/iv_header_background"
        app:layout_constraintTop_toTopOf="@+id/iv_header_background"
        app:srcCompat="?attr/colorAccent"
        app:cv_text="VASYA"
        app:cv_textSize="@dimen/font_small_12"/>

    <ImageButton
        android:id="@+id/btn_switch_theme"
        android:layout_width="@dimen/btn_round_size_40"
        android:layout_height="@dimen/btn_round_size_40"
        android:layout_marginEnd="@dimen/spacing_huge_32"
        android:background="@drawable/btn_round_bg"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintEnd_toStartOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        app:srcCompat="@drawable/ic_switch_day_night" />

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="@dimen/btn_round_size_40"
        android:layout_height="@dimen/btn_round_size_40"
        android:layout_marginStart="@dimen/spacing_huge_32"
        android:background="@drawable/btn_round_bg"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <TextView
        android:id="@+id/tv_nick_name"
        style="@style/Profile.Header.Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_avatar"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="@+id/iv_avatar"
        app:layout_constraintStart_toStartOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/tv_rank"
        style="@style/Profile.Header.Rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nick_name"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="@+id/tv_nick_name"
        app:layout_constraintStart_toStartOf="@+id/tv_nick_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_nick_name"
        tools:text="Android Software Engineer" />

    <View
        android:id="@+id/rank_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_maximum_72"
        android:background="?attr/colorAccentedSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_header_background" />

    <View
        android:id="@+id/vertical_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_tiny_4"
        android:layout_marginBottom="@dimen/spacing_tiny_4"
        android:background="?attr/colorDivider"
        app:layout_constraintBottom_toBottomOf="@id/rank_background"
        app:layout_constraintEnd_toEndOf="@id/rank_background"
        app:layout_constraintStart_toStartOf="@id/rank_background"
        app:layout_constraintTop_toTopOf="@id/rank_background" />

    <TextView
        android:id="@+id/tv_rating"
        style="@style/Profile.Metrics.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:drawableStart="@drawable/ic_sp_24"
        app:layout_constraintEnd_toStartOf="@id/vertical_divider"
        app:layout_constraintStart_toStartOf="@id/rank_background"
        app:layout_constraintTop_toTopOf="@id/rank_background"
        tools:text="0" />

    <TextView
        style="@style/Profile.Metrics.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_label_rating"
        app:layout_constraintEnd_toEndOf="@id/tv_rating"
        app:layout_constraintStart_toStartOf="@id/tv_rating"
        app:layout_constraintTop_toBottomOf="@id/tv_rating" />

    <TextView
        android:id="@+id/tv_respect"
        style="@style/Profile.Metrics.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:drawableStart="@drawable/ic_respect_24"
        app:layout_constraintEnd_toEndOf="@id/rank_background"
        app:layout_constraintStart_toEndOf="@id/vertical_divider"
        app:layout_constraintTop_toTopOf="@id/rank_background"
        tools:text="0" />

    <TextView
        style="@style/Profile.Metrics.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_label_respect"
        app:layout_constraintEnd_toEndOf="@id/tv_respect"
        app:layout_constraintStart_toStartOf="@id/tv_respect"
        app:layout_constraintTop_toBottomOf="@id/tv_respect" />

    <ImageView
        android:id="@+id/iv_small_avatar"
        android:layout_width="@dimen/btn_round_size_40"
        android:layout_height="@dimen/btn_round_size_40"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:src="@drawable/ic_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rank_background" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wr_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:hint="@string/profile_hint_first_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_small_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_small_avatar">

        <EditText
            android:id="@+id/et_first_name"
            style="@style/Profile.EditText.Single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            tools:text="John" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wr_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:layout_toEndOf="@id/iv_avatar"
        android:hint="@string/profile_hint_last_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/wr_first_name"
        app:layout_constraintTop_toBottomOf="@id/wr_first_name">

        <EditText
            android:id="@+id/et_last_name"
            style="@style/Profile.EditText.Single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            tools:text="Doe" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/first_horisontal_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/space_maximum_72"
        android:layout_marginTop="@dimen/spacing_tiny_4"
        android:layout_marginBottom="@dimen/spacing_tiny_4"
        android:background="?attr/colorDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wr_last_name" />

    <ImageView
        android:id="@+id/iv_about"
        android:layout_width="@dimen/btn_round_size_40"
        android:layout_height="@dimen/btn_round_size_40"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:src="@drawable/ic_about"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_horisontal_divider" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wr_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:hint="@string/profile_hint_about"
        app:counterMaxLength="128"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_about"
        app:layout_constraintTop_toTopOf="@id/iv_about">

        <EditText
            android:id="@+id/et_about"
            style="@style/Profile.EditText.MultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/second_horisontal_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/space_maximum_72"
        android:layout_marginTop="@dimen/spacing_tiny_4"
        android:layout_marginBottom="@dimen/spacing_tiny_4"
        android:background="?attr/colorDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wr_about" />

    <ImageView
        android:id="@+id/iv_repo"
        android:layout_width="@dimen/btn_round_size_40"
        android:layout_height="@dimen/btn_round_size_40"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:src="@drawable/ic_repo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_horisontal_divider" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wr_repository"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:hint="@string/profile_hint_repository"
        app:layout_constraintEnd_toStartOf="@id/iv_eye"
        app:layout_constraintStart_toEndOf="@id/iv_repo"
        app:layout_constraintTop_toTopOf="@id/iv_repo">

        <EditText
            android:id="@+id/et_repository"
            style="@style/Profile.EditText.Single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textUri" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/iv_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:src="@drawable/ic_eye_24dp"
        app:layout_constraintBottom_toBottomOf="@id/wr_repository"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wr_repository" />
</androidx.constraintlayout.widget.ConstraintLayout>